<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xh.dao.KbProjectUserMapper">
  <resultMap id="BaseResultMap" type="com.xh.entity.KbProjectUser">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="project_code" jdbcType="CHAR" property="projectCode" />
    <result column="project_name" jdbcType="VARCHAR" property="projectName" />
    <result column="project_permission" jdbcType="CHAR" property="projectPermission" />
    <result column="project_level" jdbcType="INTEGER" property="projectLevel" />
    <result column="user_code" jdbcType="VARCHAR" property="userCode" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="user_dept_code" jdbcType="CHAR" property="userDeptCode" />
    <result column="create_user_code" jdbcType="VARCHAR" property="createUserCode" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, project_code, project_name, project_permission,project_level, user_code, user_name, user_dept_code, 
    create_user_code, create_time
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 'false' as QUERYID,
    <include refid="Base_Column_List" />
    from kb_project_user
    where id = #{id,jdbcType=INTEGER}
  </select>
  <!-- 添加项目用户表 -->
  	<insert id="insertProjectUser" parameterType="list">
		insert into kb_project_user (project_code,project_name,project_permission,project_level,user_code,user_name,user_dept_code,create_user_code,create_time)
		<foreach collection="list" item="userPro" separator="union ">
			select '${userPro.projectCode}','${userPro.projectName}','${userPro.projectPermission}','${userPro.projectLevel}','${userPro.userCode}','${userPro.userName}','${userPro.userDeptCode}','${userPro.createUserCode}','${userPro.createTime}' from dual
		</foreach>
	</insert>
<!--   		insert into kb_project_user (project_code,project_name,project_permission,user_code,user_name,user_dept_code,create_user_code,create_time) 
		values (#{projectCode},#{projectName},#{projectPermission},#{userCode},#{userName},#{userDeptCode},#{createUserCode},#{createTime}) -->
</mapper>